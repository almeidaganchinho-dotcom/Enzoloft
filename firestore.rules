rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Reservations - qualquer um pode criar e ler
    match /reservations/{reservationId} {
      allow read, create: if true;
      allow update, delete: if true;  // Temporário para desenvolvimento
    }
    
    // Prices - todos podem ler e escrever
    match /prices/{priceId} {
      allow read, write: if true;
    }
    
    // Availability - todos podem ler e escrever
    match /availability/{availabilityId} {
      allow read, write: if true;
    }
    
    // Vouchers - todos podem ler e escrever
    match /vouchers/{voucherId} {
      allow read, write: if true;
    }
    
    // Settings - todos podem ler e escrever
    match /settings/{settingId} {
      allow read, write: if true;
    }

    // Visit events - registo de visitas para analíticas
    match /visitEvents/{eventId} {
      allow create, read, update: if true;
      allow delete: if false;
    }

    // Client events - monitorização de eventos e erros
    match /clientEvents/{eventId} {
      allow create, read: if true;
      allow update, delete: if false;
    }
  }
}
