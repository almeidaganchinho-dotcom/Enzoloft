rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Reservations - qualquer um pode criar, só admin pode ler/atualizar
    match /reservations/{reservationId} {
      allow create: if true;  // Permite qualquer visitante criar reserva
      allow read, update, delete: if request.auth != null;  // Só autenticados (admin)
    }
    
    // Prices - só admin pode escrever, todos podem ler
    match /prices/{priceId} {
      allow read: if true;  // Todos podem ler preços
      allow write: if request.auth != null;  // Só autenticados (admin) podem modificar
    }
    
    // Settings - só admin pode escrever, todos podem ler
    match /settings/{settingId} {
      allow read: if true;  // Todos podem ler configurações
      allow write: if request.auth != null;  // Só autenticados (admin) podem modificar
    }
  }
}
